{
  "env": {
    "node": true,
    "commonjs": true,
    "es6": true
  },
  "plugins": ["prettier"],
  "extends": "eslint:recommended",
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "prettier/prettier": "warn",
    "no-console": "off"
  }
}
